generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Podcast {
  id            Int      @id @default(autoincrement())
  itunesId      Int      @unique
  name          String
  artistName    String
  artworkUrl600 String?
  feedUrl       String?
  createdAt     DateTime @default(now())
}
